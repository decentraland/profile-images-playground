{
  "extends": ["next/core-web-vitals", "@dcl/eslint-config/sdk"],
  "parserOptions": {
    "project": [
      "tsconfig.json"
    ]
  },
  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "semi": false,
      "singleQuote": true,
      "trailingComma": "none",
      "tabWidth": 2
    }]
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "rules": {
        "@next/next/no-img-element": "off"
      }
    }
  ]
}
